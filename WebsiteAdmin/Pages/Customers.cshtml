@page
@model CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<div class="row mb-3">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">@Model.Stats.TotalUsers</h5>
                <p class="card-text">Total Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">@Model.Stats.ActiveLast7d</h5>
                <p class="card-text">Active (7d)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">@Model.Stats.PlusSubscribers</h5>
                <p class="card-text">Plus</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">@Model.Stats.ProSubscribers</h5>
                <p class="card-text">Pro</p>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Store</th>
            <th>Subscription</th>
            <th>Last Seen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserId.ToString().Substring(0, 8)...</td>
                <td>@(user.Email ?? "-")</td>
                <td>@(user.PhoneNumber ?? "-")</td>
                <td>
                    @switch (user.Store)
                    {
                        case Common.Store.GooglePlay:
                            <span class="badge bg-success">Google Play</span>
                            break;
                        case Common.Store.Apple:
                            <span class="badge bg-dark">Apple</span>
                            break;
                        default:
                            <span class="badge bg-secondary">Unknown</span>
                            break;
                    }
                </td>
                <td>
                    @switch (user.Subscription)
                    {
                        case Common.SubscriptionTier.Pro:
                            <span class="badge bg-warning">Pro</span>
                            break;
                        case Common.SubscriptionTier.Plus:
                            <span class="badge bg-info">Plus</span>
                            break;
                        default:
                            <span class="badge bg-secondary">Free</span>
                            break;
                    }
                </td>
                <td>@user.LastHeartbeat.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Users.Any())
{
    <div class="alert alert-info">No customers found.</div>
}
