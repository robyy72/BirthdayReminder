<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.FlyoutMenu"
             IsVisible="False"
             HorizontalOptions="Fill"
             VerticalOptions="Fill">

    <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
        <!-- Semi-transparent overlay (tap to close, MainPage visible behind) -->
        <BoxView x:Name="Overlay"
                 Color="Black"
                 Opacity="0"
                 ZIndex="1">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Flyout Panel - using Frame instead of Border for Android compatibility -->
        <Frame x:Name="FlyoutPanel"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
               BorderColor="Transparent"
               CornerRadius="0"
               Padding="0"
               HorizontalOptions="Start"
               VerticalOptions="Fill"
               WidthRequest="250"
               ZIndex="2"
               HasShadow="True"
               TranslationX="-250">

            <Grid RowDefinitions="60,*,Auto">

                <!-- Header -->
                <Grid Grid.Row="0"
                      BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
                      Padding="15,0">
                    <Label Text="{x:Static resx:Resources.Flyout_Title}"
                           Style="{StaticResource LabelHeaderBar}"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />
                </Grid>

                <!-- Menu Items -->
                <VerticalStackLayout Grid.Row="1"
                                     Padding="10,15"
                                     Spacing="5">

                    <!-- Startseite -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOverviewTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Overview}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Alle Geburtstage -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllBirthdaysTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_ShowAll}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Konto -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAccountTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Account}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Einstellungen -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingsTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Settings}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Erinnerungen -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRemindersTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Reminders}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Meine Tickets -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Tickets}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- Datenschutz -->
                    <Frame Style="{StaticResource FrameFlyout}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPrivacyTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Flyout_Privacy}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Frame>

                </VerticalStackLayout>

                <!-- Footer with Version -->
                <Grid Grid.Row="2"
                      Padding="15,10"
                      HeightRequest="50">
                    <Label x:Name="VersionLabel"
                           Style="{StaticResource LabelDescriptionOnCard}"
                           VerticalOptions="End"
                           HorizontalOptions="Start" />
                </Grid>

            </Grid>
        </Frame>
    </Grid>

</ContentView>
