<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.FlyoutMenu"
             IsVisible="False">

    <Grid>
        <!-- Semi-transparent overlay (tap to close, MainPage visible behind) -->
        <BoxView x:Name="Overlay"
                 Color="#40000000"
                 Opacity="0">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Flyout Panel -->
        <Border x:Name="FlyoutPanel"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                StrokeThickness="0"
                Padding="0"
                HorizontalOptions="Start"
                WidthRequest="250"
                Shadow="{Shadow Brush=Black, Offset='5,5', Radius=10, Opacity=0.3}"
                TranslationX="-250">

            <Grid RowDefinitions="60,*,Auto">

                <!-- Header -->
                <Grid Grid.Row="0"
                      BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
                      Padding="15,0">
                    <Label Text="Wunschseite wÃ¤hlen"
                           Style="{StaticResource LabelHeaderBar}"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />
                </Grid>

                <!-- Menu Items -->
                <VerticalStackLayout Grid.Row="1"
                                     Padding="10,15"
                                     Spacing="5">

                    <!-- Startseite -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOverviewTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_Overview}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Alle Geburtstage -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllBirthdaysTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_ShowAll}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Konto -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAccountTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_Account}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Einstellungen -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingsTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_Settings}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Erinnerungen -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRemindersTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_Reminders}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Datenschutz -->
                    <Border Style="{StaticResource TileFlyout}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPrivacyTapped" />
                        </Border.GestureRecognizers>
                        <Label Text="{x:Static resx:Resources.Tab_Privacy}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Border>

                </VerticalStackLayout>

                <!-- Footer with Version -->
                <Grid Grid.Row="2"
                      Padding="15,10"
                      HeightRequest="50">
                    <Label x:Name="VersionLabel"
                           Style="{StaticResource LabelDescription}"
                           VerticalOptions="End"
                           HorizontalOptions="Start" />
                </Grid>

            </Grid>
        </Border>
    </Grid>

</ContentView>
