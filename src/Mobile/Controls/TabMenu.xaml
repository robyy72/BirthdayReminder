<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.TabMenu">

    <Grid BackgroundColor="{StaticResource White}"
          HeightRequest="60"
          ColumnDefinitions="*,*,*,*">

        <!-- Home (MainPage) -->
        <Grid x:Name="TabHome"
              Grid.Column="0"
              Padding="5">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnHomeClicked" />
            </Grid.GestureRecognizers>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="2">
                <Label x:Name="IconHome"
                       Text="&#x1F3E0;"
                       FontSize="24"
                       HorizontalOptions="Center" />
                <Label x:Name="LabelHome"
                       Text="Home"
                       FontSize="10"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- List (AllBirthdaysPage) -->
        <Grid x:Name="TabList"
              Grid.Column="1"
              Padding="5">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnListClicked" />
            </Grid.GestureRecognizers>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="2">
                <Label x:Name="IconList"
                       Text="&#x1F4CB;"
                       FontSize="24"
                       HorizontalOptions="Center" />
                <Label x:Name="LabelList"
                       Text="List"
                       FontSize="10"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Person (AccountPage) -->
        <Grid x:Name="TabPerson"
              Grid.Column="2"
              Padding="5">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPersonClicked" />
            </Grid.GestureRecognizers>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="2">
                <Label x:Name="IconPerson"
                       Text="&#x1F464;"
                       FontSize="24"
                       HorizontalOptions="Center" />
                <Label x:Name="LabelPerson"
                       Text="Account"
                       FontSize="10"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Settings (SettingsPage) -->
        <Grid x:Name="TabSettings"
              Grid.Column="3"
              Padding="5">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSettingsClicked" />
            </Grid.GestureRecognizers>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="2">
                <Label x:Name="IconSettings"
                       Text="&#x2699;"
                       FontSize="24"
                       HorizontalOptions="Center" />
                <Label x:Name="LabelSettings"
                       Text="Settings"
                       FontSize="10"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

    </Grid>

</ContentView>
