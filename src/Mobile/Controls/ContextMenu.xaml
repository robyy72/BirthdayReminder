<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.ContextMenu"
             IsVisible="False">

    <Grid>
        <!-- Semi-transparent overlay (tap to close) -->
        <BoxView x:Name="Overlay"
                 Color="#80000000"
                 Opacity="0">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Context Menu Panel (unfolds from right edge) -->
        <Border x:Name="ContextMenuPanel"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                StrokeThickness="0"
                Padding="0"
                HorizontalOptions="End"
                WidthRequest="180"
                AnchorX="1"
                ScaleX="0">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="-3,3" Radius="8" Opacity="0.3" />
            </Border.Shadow>

            <!-- Menu Items -->
            <VerticalStackLayout x:Name="MenuItemsContainer"
                                 Padding="10,15"
                                 Spacing="5" />
        </Border>
    </Grid>

</ContentView>
