<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.TilePersonResult">

    <Border x:Name="TileBorder" Style="{StaticResource TilePersonResult}">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTileTapped" />
        </Border.GestureRecognizers>

        <Grid ColumnDefinitions="*,Auto" Padding="10,4">
            <Label x:Name="NameLabel"
                   Grid.Column="0"
                   Style="{StaticResource LabelInfoOnCard}"
                   VerticalOptions="Center" />

            <Label x:Name="DateLabel"
                   Grid.Column="1"
                   Style="{StaticResource LabelInfoOnCard}"
                   VerticalOptions="Center" />
        </Grid>
    </Border>

</ContentView>
