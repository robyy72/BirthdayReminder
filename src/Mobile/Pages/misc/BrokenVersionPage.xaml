<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.BrokenVersionPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.BrokenVersion_Title}">

    <Grid RowDefinitions="Auto,*">
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.BrokenVersion_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="False"
                               ShowContextMenu="False" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Center"
                                 Padding="20"
                                 Spacing="20">

                <Label Text="{x:Static resx:Resources.BrokenVersion_ErrorHeader}"
                       Style="{StaticResource LabelHeader}"
                       HorizontalTextAlignment="Center" />

                <Label Text="{x:Static resx:Resources.BrokenVersion_Header}"
                       Style="{StaticResource LabelInfoOnCard}"
                       HorizontalTextAlignment="Center" />

                <Label Text="{x:Static resx:Resources.BrokenVersion_Info}"
                       Style="{StaticResource LabelInfoOnCard}"
                       HorizontalTextAlignment="Center" />

                <Button Text="{x:Static resx:Resources.BrokenVersion_CheckUpdate}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnCheckUpdateClicked" />

                <Label Text="{x:Static resx:Resources.BrokenVersion_TryAnyway}"
                       Style="{StaticResource LabelInfoOnCard}"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTryAnywayClicked" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
