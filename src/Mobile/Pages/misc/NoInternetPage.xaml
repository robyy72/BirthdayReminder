<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.NoInternetPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_NoInternet_Title}">

    <Grid RowDefinitions="Auto,*">
        <controls:CustomHeader x:Name="Header"
                               Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_NoInternet_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True"
                               ShowContextMenu="False" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Center"
                                 Padding="30"
                                 Spacing="20">

                <Image Source="no_internet_icon.png"
                       HeightRequest="80"
                       WidthRequest="80"
                       HorizontalOptions="Center" />

                <Label Text="{x:Static resx:Resources.NoInternet_Header}"
                       Style="{StaticResource LabelHeader}"
                       HorizontalTextAlignment="Center" />

                <Label Text="{x:Static resx:Resources.NoInternet_Message}"
                       Style="{StaticResource LabelInfoOnCard}"
                       HorizontalTextAlignment="Center" />

                <Button Text="{x:Static resx:Resources.NoInternet_TryAgain}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnTryAgainClicked" />

                <Button Text="{x:Static resx:Resources.NoInternet_ContinueOffline}"
                        Style="{StaticResource ButtonSecondary}"
                        Clicked="OnContinueOfflineClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
