<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.PrivacyPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource White}"
             Title="{x:Static resx:Resources.Page_Privacy_Title}">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Privacy_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content with gold background -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray900}}">
            <VerticalStackLayout Padding="20" Spacing="15">

                <Label Text="{x:Static resx:Resources.Privacy_Header}" FontSize="24" FontAttributes="Bold" />

                <Label Text="{x:Static resx:Resources.Privacy_Text_1}" />

                <Label Text="{x:Static resx:Resources.Privacy_Text_2}" />

                <Label Text="{x:Static resx:Resources.Privacy_Text_3}" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Tab Menu -->
        <controls:TabMenu Grid.Row="2" ActiveTab="Home" />
    </Grid>

</ContentPage>
