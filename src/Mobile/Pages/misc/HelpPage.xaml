<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.HelpPage"
             NavigationPage.HasNavigationBar="False"

             Title="{x:Static resx:Resources.Page_Help_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Help_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content with gold background -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray900}}">
            <VerticalStackLayout Padding="30" Spacing="25">

                <Label x:Name="HeaderLabel"
                       Style="{StaticResource LabelHeader}" />

                <Border Style="{StaticResource Card}">
                    <Label x:Name="ContentLabel_1"
                           Style="{StaticResource LabelInfo}"
                           Padding="20" />
                </Border>

                <Border Style="{StaticResource Card}">
                    <Label x:Name="ContentLabel_2"
                           Style="{StaticResource LabelInfo}"
                           Padding="20" />
                </Border>

                <Border x:Name="TimezoneCard" Style="{StaticResource Card}" IsVisible="False">
                    <VerticalStackLayout Padding="20" Spacing="10">
                        <Label x:Name="TimezoneLabel"
                               Style="{StaticResource LabelInfo}" />
                        <Label Text="{x:Static resx:Resources.Timezone_MoreInfo}"
                               Style="{StaticResource LabelHelpLink}"
                               HorizontalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTimezoneInfoTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
