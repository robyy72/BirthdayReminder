<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.PurchaseAboPage"
             x:DataType="controls:PurchaseAboPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
>

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.PurchaseAbo_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content with gold background -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray900}}">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Card: Subscription Info -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_CardHeader}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="20">
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_Description}"
                                   Style="{StaticResource LabelInfoOnCard}" />

                            <Button x:Name="ButtonPurchase"
                                    Text="{x:Static resx:Resources.PurchaseAbo_Button}"
                                    Style="{StaticResource ButtonGreen}"
                                    Clicked="OnPurchaseClicked" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Card: Features -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_FeaturesHeader}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10">
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_Feature_Sms}"
                                   Style="{StaticResource LabelInfoOnCard}" />
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_Feature_WhatsApp}"
                                   Style="{StaticResource LabelInfoOnCard}" />
                            <Label Text="{x:Static resx:Resources.PurchaseAbo_Feature_Email}"
                                   Style="{StaticResource LabelInfoOnCard}" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
