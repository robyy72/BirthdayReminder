<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.StartPage_9"
             x:DataType="local:StartPage_9"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BodyBackgroundLight}, Dark={StaticResource BodyBackgroundDark}}">
            <VerticalStackLayout Padding="30" Spacing="20">

                <Label Text="{x:Static resx:Resources.Start9_CalendarExport}"
                       Style="{StaticResource LabelHeader}" />

                <!-- Accordion 1: Device Calendar -->
                <Border x:Name="Accordion1" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource AccordionHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_DeviceCalendar}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion1Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion1Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion1Content" Padding="20" Spacing="15" IsVisible="False">
                            <!-- Enable device calendar toggle -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_WriteToCalendar}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="DeviceCalendarSwitch"
                                        Grid.Column="1"
                                        Toggled="OnDeviceCalendarToggled"
                                        VerticalOptions="Center" />
                            </Grid>

                            <!-- Calendar List -->
                            <VerticalStackLayout x:Name="CalendarListContainer"
                                                 IsVisible="False"
                                                 Spacing="5">
                                <VerticalStackLayout x:Name="CalendarTogglesContainer"
                                                     Spacing="5" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 2: Outlook Calendar -->
                <Border x:Name="Accordion2" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource AccordionHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_OutlookCalendar}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion2Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion2Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion2Content" Padding="20" Spacing="15" IsVisible="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_SingleEmail}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="OutlookSingleEmailSwitch"
                                        Grid.Column="1"
                                        VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_GrantAccess}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="OutlookGrantAccessSwitch"
                                        Grid.Column="1"
                                        VerticalOptions="Center" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 3: Google Calendar -->
                <Border x:Name="Accordion3" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource AccordionHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_GoogleCalendar}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion3Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion3Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion3Content" Padding="20" Spacing="15" IsVisible="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_SingleEmail}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="GoogleSingleEmailSwitch"
                                        Grid.Column="1"
                                        VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start9_GrantAccess}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="GoogleGrantAccessSwitch"
                                        Grid.Column="1"
                                        VerticalOptions="Center" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
