<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.StartPage_3"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="25">

                <Label Text="{x:Static resx:Resources.Start2_Text_1}"
                       Style="{StaticResource LabelInfoOnCard}" />

                <Label Text="{x:Static resx:Resources.Start2_Text_2}"
                       Style="{StaticResource LabelInfoOnCard}" />

                <!-- Contacts Selection -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Start2_UseContacts}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="ContactsGroup">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start2_NoContacts}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioNoContacts"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             IsChecked="True"
                                             CheckedChanged="OnRadioChanged" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Start2_AskNextPage}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioAskNextPage"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnRadioChanged" />
                            </Grid>

                            <!-- Permission Request Box -->
                            <Border x:Name="PermissionBox"
                                    Style="{StaticResource TileDialog}"
                                    IsVisible="False"
                                    Margin="0,10,0,0">
                                <Border Style="{StaticResource TileInnerForEntry}"
                                        Padding="15">
                                    <VerticalStackLayout Spacing="10">
                                        <Label Text="{x:Static resx:Resources.Permission_GrantRequest}"
                                               Style="{StaticResource LabelInfoOnCard}" />
                                        <Button x:Name="PermissionButton"
                                                Text="{x:Static resx:Resources.Permission_StartDialog}"
                                                Style="{StaticResource ButtonGreen}"
                                                Clicked="OnPermissionButtonClicked" />
                                        <Label x:Name="PermissionResultLabel"
                                               Style="{StaticResource LabelInfoOnCard}"
                                               IsVisible="False" />
                                    </VerticalStackLayout>
                                </Border>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
