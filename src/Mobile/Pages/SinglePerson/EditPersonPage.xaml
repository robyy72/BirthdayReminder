<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.EditPersonPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_EditBirthday_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_EditBirthday_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Name -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.CardHeader_Name}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="15" Spacing="10">
                            <Border x:Name="ErrorBorder" Style="{StaticResource BorderError}">
                                <Label x:Name="ErrorLabel" Style="{StaticResource LabelError}" />
                            </Border>
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Entry x:Name="FirstNameEntry"
                                           Placeholder="{x:Static resx:Resources.Placeholder_FirstName}"
                                           Style="{StaticResource EntryStandard}"
                                           Focused="OnEntryFocused"
                                           Unfocused="OnEntryUnfocused" />
                                </Border>
                            </Border>
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Entry x:Name="LastNameEntry"
                                           Placeholder="{x:Static resx:Resources.Placeholder_LastName}"
                                           Style="{StaticResource EntryStandard}"
                                           Focused="OnEntryFocused"
                                           Unfocused="OnEntryUnfocused" />
                                </Border>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Birthday -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.CardHeader_Birthday}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10">
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                <Picker x:Name="DayPicker"
                                        Title="{x:Static resx:Resources.General_Label_Day}"
                                        HorizontalTextAlignment="End"
                                        FontSize="18" />
                                <Label Text="."
                                       FontSize="18"
                                       VerticalOptions="Center" />
                                <Picker x:Name="MonthPicker"
                                        Title="{x:Static resx:Resources.General_Label_Month}"
                                        FontSize="18" />
                                <Picker x:Name="YearPicker"
                                        Title="{x:Static resx:Resources.General_Label_Year}"
                                        FontSize="18" />
                            </HorizontalStackLayout>
                            <Label Text="{x:Static resx:Resources.More_Informations}"
                                   Style="{StaticResource LabelHelpLink}"
                                   HorizontalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnHelpBirthdayTapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Update Contact Toggle -->
                <Grid x:Name="UpdateContactRow" ColumnDefinitions="*,Auto" IsVisible="False" Margin="0,10,0,0">
                    <Label x:Name="UpdateContactLabel"
                           Style="{StaticResource LabelInfo}"
                           VerticalOptions="Center" />
                    <Switch x:Name="UpdateContactSwitch"
                            Grid.Column="1"
                            Toggled="OnUpdateContactToggled" />
                </Grid>

                <!-- Bottom Buttons -->
                <Button Text="{x:Static resx:Resources.General_Button_Save}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnSaveClicked"
                        Margin="0,20,0,0" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
