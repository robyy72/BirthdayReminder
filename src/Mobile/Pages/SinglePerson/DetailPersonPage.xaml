<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.DetailPersonPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_BirthdayDetail_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_BirthdayDetail_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True"
                               BackClickedCommand="{Binding BackCommand}" />

        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="*,Auto" Padding="30">
                <!-- Content -->
                <VerticalStackLayout Grid.Row="0" Spacing="20" VerticalOptions="Center">

                    <!-- "Der Geburtstag von" -->
                    <Label Text="{x:Static resx:Resources.Detail_BirthdayOf}"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- Name -->
                    <Label x:Name="NameDisplayLabel"
                           Style="{StaticResource LabelHeader}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- "ist am" -->
                    <Label Text="{x:Static resx:Resources.Detail_IsOn}"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- Datum -->
                    <Label x:Name="DateDisplayLabel"
                           Style="{StaticResource LabelHeader}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- Alter (nur wenn Jahrgang bekannt) -->
                    <Label x:Name="AgeDisplayLabel"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           IsVisible="False" />

                    <!-- Days until -->
                    <Label x:Name="DaysUntilLabel"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- Gray separator -->
                    <BoxView Color="{StaticResource Gray400}"
                             HeightRequest="1"
                             HorizontalOptions="Fill"
                             Margin="0,10" />

                    <!-- Reminder info -->
                    <Label x:Name="ReminderInfoLabel"
                           Style="{StaticResource LabelDescription}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                </VerticalStackLayout>

                <!-- Bottom Button -->
                <Button Grid.Row="1"
                        Text="{x:Static resx:Resources.General_Button_Edit}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnEditClicked"
                        Margin="0,30,0,20" />

            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>

