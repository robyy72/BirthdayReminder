<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.AllBirthdaysPage"
             x:DataType="controls:AllBirthdaysPage"
             NavigationPage.HasNavigationBar="False"

             Title="{x:Static resx:Resources.Page_AllBirthdays_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_AllBirthdays_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content with gold background -->
        <Grid Grid.Row="1"
              RowDefinitions="Auto,*"
              Padding="20,20,20,0"
              BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray900}}">
            <!-- Month Filter Picker -->
            <Picker x:Name="MonthPicker"
                    Style="{StaticResource PickerBase}"
                    HorizontalOptions="Fill"
                    SelectedIndexChanged="OnMonthFilterChanged" />

            <!-- Birthday List -->
            <CollectionView Grid.Row="1"
                            x:Name="BirthdaysList"
                            ItemsSource="{Binding FilteredBirthdays}"
                            SelectionMode="Single"
                            SelectionChanged="OnBirthdaySelected"
                            Margin="0,15,0,0">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="controls:PersonViewModel">
                        <Border Style="{StaticResource CardBirthday}">
                            <VerticalStackLayout Spacing="0">
                                <Border Style="{StaticResource CardHeader}">
                                    <Label Text="{Binding DisplayName}"
                                           Style="{StaticResource LabelCardHeader}" />
                                </Border>
                                <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                    <Label Grid.Column="0"
                                           Text="{Binding DateDisplay}"
                                           Style="{StaticResource LabelInfoOnCard}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding AgeDisplay}"
                                           Style="{StaticResource LabelInfoOnCard}"
                                           VerticalOptions="Center" />
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="{x:Static resx:Resources.EmptyView_NoBirthdays}"
                           Style="{StaticResource LabelInfoOnCard}"
                           HorizontalOptions="Center"
                           Padding="20" />
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

    </Grid>

</ContentPage>
