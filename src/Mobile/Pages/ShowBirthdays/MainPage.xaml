<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.MainPage"
             x:DataType="controls:MainPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_Main_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader x:Name="TheHeader"
                               Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Main_Title}"
                               ShowMenuButton="True"
                               ShowBackButton="False"
                               ShowContextMenu="True" />

        <!-- Content with gold background -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BodyBackgroundLight}, Dark={StaticResource BodyBackgroundDark}}">
            <VerticalStackLayout Spacing="15" Padding="20">
                <!-- Upcoming Birthdays Section -->
                <Label x:Name="UpcomingBirthdaysLabel"
                       Style="{StaticResource LabelSubHeader}" HorizontalOptions="Center"/>

                <CollectionView x:Name="UpcomingList"
                                ItemsSource="{Binding UpcomingBirthdays}"
                                SelectionMode="Single"
                                SelectionChanged="OnBirthdaySelected">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="controls:PersonViewModel">
                            <Border Style="{StaticResource CardBirthday}">
                                <VerticalStackLayout Spacing="0">
                                    <Border Style="{StaticResource CardHeader}">
                                        <Label Text="{Binding DisplayName}"
                                               Style="{StaticResource LabelCardHeader}" />
                                    </Border>
                                    <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDisplay}"
                                               Style="{StaticResource LabelInfoOnCard}"
                                               VerticalOptions="Center" />
                                        <Label Grid.Column="1"
                                               Text="{Binding AgeDisplay}"
                                               Style="{StaticResource LabelInfoOnCard}"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="{x:Static resx:Resources.EmptyView_NoUpcoming}"
                               Style="{StaticResource LabelInfoOnPage}"
                               HorizontalOptions="Center"
                               Padding="20" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Past Birthdays Section -->
                <Label x:Name="PastBirthdaysLabel"
                       Style="{StaticResource LabelSubHeader}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />

                <CollectionView x:Name="PastList"
                                ItemsSource="{Binding PastBirthdays}"
                                SelectionMode="Single"
                                SelectionChanged="OnBirthdaySelected">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="controls:PersonViewModel">
                            <Border Style="{StaticResource CardBirthday}">
                                <VerticalStackLayout Spacing="0">
                                    <Border Style="{StaticResource CardHeader}">
                                        <Label Text="{Binding DisplayName}"
                                               Style="{StaticResource LabelCardHeader}" />
                                    </Border>
                                    <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDisplay}"
                                               Style="{StaticResource LabelInfoOnCard}"
                                               VerticalOptions="Center" />
                                        <Label Grid.Column="1"
                                               Text="{Binding AgeDisplay}"
                                               Style="{StaticResource LabelInfoOnCard}"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="{x:Static resx:Resources.EmptyView_NoMissed}"
                               Style="{StaticResource LabelInfoOnPage}"
                               HorizontalOptions="Center"
                               Padding="20" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Buttons -->
                <Button Text="{x:Static resx:Resources.Page_Main_NewBirthday}"
                        Style="{StaticResource ButtonGreen}"
                        Clicked="OnNewBirthdayClicked"
                        Margin="0,30,0,40" />
            </VerticalStackLayout>
        </ScrollView>


        <!-- Flyout Menu Overlay (spans all rows) -->
        <controls:FlyoutMenu x:Name="TheFlyout"
                             Grid.Row="0"
                             Grid.RowSpan="2"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill" />

        <!-- Context Menu Overlay (spans all rows) -->
        <controls:ContextMenu x:Name="TheContextMenu"
                              Grid.Row="0"
                              Grid.RowSpan="2"
                              HorizontalOptions="Fill"
                              VerticalOptions="Fill" />
    </Grid>
</ContentPage>
