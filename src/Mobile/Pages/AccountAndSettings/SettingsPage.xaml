<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.SettingsPage"
             NavigationPage.HasNavigationBar="False"

             Title="{x:Static resx:Resources.Page_Settings_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Settings_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content with gold background -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray900}}">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Accordion 1: Display -->
                <Border x:Name="Accordion1" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Display}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion1Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion1Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion1Content" Padding="20" Spacing="15" IsVisible="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ShowUpcomingBirthdays}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Border Grid.Column="1" Style="{StaticResource TileOuterForEntry}" WidthRequest="70">
                                    <Border Style="{StaticResource TileInnerForEntry}">
                                        <Entry x:Name="UpcomingEntry"
                                               Keyboard="Numeric"
                                               HorizontalTextAlignment="Center"
                                               Style="{StaticResource EntryStandard}" />
                                    </Border>
                                </Border>
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ShowPastBirthdays}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Border Grid.Column="1" Style="{StaticResource TileOuterForEntry}" WidthRequest="70">
                                    <Border Style="{StaticResource TileInnerForEntry}">
                                        <Entry x:Name="PastEntry"
                                               Keyboard="Numeric"
                                               HorizontalTextAlignment="Center"
                                               Style="{StaticResource EntryStandard}" />
                                    </Border>
                                </Border>
                            </Grid>
                            <!-- Name Direction -->
                            <Label Text="{x:Static resx:Resources.Settings_NameDirection}"
                                   Style="{StaticResource LabelDescriptionOnCard}"
                                   Margin="0,10,0,0" />
                            <VerticalStackLayout RadioButtonGroup.GroupName="NameDirectionGroup" Spacing="5">
                                <RadioButton Value="FirstFirstName" x:Name="RadioFirstFirstName">
                                    <RadioButton.Content>
                                        <Label Text="{x:Static resx:Resources.NameDirection_FirstFirstName}"
                                               Style="{StaticResource LabelInfoOnCard}" />
                                    </RadioButton.Content>
                                </RadioButton>
                                <RadioButton Value="FirstLastName" x:Name="RadioFirstLastName">
                                    <RadioButton.Content>
                                        <Label Text="{x:Static resx:Resources.NameDirection_FirstLastName}"
                                               Style="{StaticResource LabelInfoOnCard}" />
                                    </RadioButton.Content>
                                </RadioButton>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 2: Theme -->
                <Border x:Name="Accordion2" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Theme}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion2Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion2Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion2Content" Padding="20" Spacing="10" IsVisible="False"
                                             RadioButtonGroup.GroupName="ThemeGroup">
                            <RadioButton Value="Light" x:Name="RadioLight">
                                <RadioButton.Content>
                                    <Label Text="{x:Static resx:Resources.Settings_Theme_Light}"
                                           Style="{StaticResource LabelInfoOnCard}" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Value="Dark" x:Name="RadioDark">
                                <RadioButton.Content>
                                    <Label Text="{x:Static resx:Resources.Settings_Theme_Dark}"
                                           Style="{StaticResource LabelInfoOnCard}" />
                                </RadioButton.Content>
                            </RadioButton>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 3: Language -->
                <Border x:Name="Accordion3" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Language}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion3Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion3Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion3Content" Padding="20" Spacing="10" IsVisible="False"
                                             RadioButtonGroup.GroupName="LocaleGroup">
                            <RadioButton Value="de" x:Name="RadioDe">
                                <RadioButton.Content>
                                    <Label Text="Deutsch"
                                           Style="{StaticResource LabelInfoOnCard}" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Value="en" x:Name="RadioEn">
                                <RadioButton.Content>
                                    <Label Text="English"
                                           Style="{StaticResource LabelInfoOnCard}" />
                                </RadioButton.Content>
                            </RadioButton>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 4: Contacts -->
                <Border x:Name="Accordion4" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Contacts}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion4Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion4Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion4Content" Padding="20" Spacing="10" IsVisible="False"
                                             RadioButtonGroup.GroupName="ContactsGroup">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsRead}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsRead"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsNone}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsNone"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accordion 5: Calendars -->
                <Border x:Name="Accordion5" Style="{StaticResource Accordion}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Calendars}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label x:Name="Accordion5Arrow"
                                       Grid.Column="1"
                                       Text="▼"
                                       Style="{StaticResource LabelCardHeader}" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAccordion5Tapped" />
                            </Border.GestureRecognizers>
                        </Border>
                        <VerticalStackLayout x:Name="Accordion5Content" Padding="20" Spacing="15" IsVisible="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_WriteCalendarsMultiple}"
                                       Style="{StaticResource LabelInfoOnCard}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="WriteCalendarsSwitch"
                                        Grid.Column="1"
                                        Toggled="OnWriteCalendarsToggled"
                                        VerticalOptions="Center" />
                            </Grid>

                            <VerticalStackLayout x:Name="CalendarListContainer"
                                                 IsVisible="False"
                                                 Spacing="5">
                                <Label Text="{x:Static resx:Resources.Settings_SelectCalendars}"
                                       Style="{StaticResource LabelDescriptionOnCard}" />
                                <VerticalStackLayout x:Name="CalendarTogglesContainer"
                                                     Spacing="5" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Save Button -->
                <Button Text="{x:Static resx:Resources.General_Button_Save}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnSaveClicked"
                        Margin="0,15,0,0" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
