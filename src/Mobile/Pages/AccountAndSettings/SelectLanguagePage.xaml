<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.SelectLanguagePage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Settings_Language}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader x:Name="TheHeader"
                               Grid.Row="0"
                               Title="{x:Static resx:Resources.Settings_Language}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BodyBackgroundLight}, Dark={StaticResource BodyBackgroundDark}}">
            <VerticalStackLayout Padding="20" Spacing="10">

                <!-- Language Tiles (dynamically populated) -->
                <VerticalStackLayout x:Name="LanguageTilesContainer"
                                     Spacing="10"
                                     RadioButtonGroup.GroupName="LanguageGroup" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
