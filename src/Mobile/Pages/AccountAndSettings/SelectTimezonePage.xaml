<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.SelectTimezonePage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Timezone_Select_Header}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader x:Name="TheHeader"
                               Grid.Row="0"
                               Title="{x:Static resx:Resources.Timezone_Select_Header}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Content -->
        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BodyBackgroundLight}, Dark={StaticResource BodyBackgroundDark}}">
            <VerticalStackLayout Padding="20" Spacing="10">

                <!-- Hint -->
                <Label Text="{x:Static resx:Resources.Settings_Timezone_Hint}"
                       Style="{StaticResource LabelInfoOnPage}"
                       Margin="10,0,10,10" />

                <!-- Timezone Tiles (dynamically populated) -->
                <VerticalStackLayout x:Name="TimezoneTilesContainer"
                                     Spacing="10"
                                     RadioButtonGroup.GroupName="TimezoneGroup" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
