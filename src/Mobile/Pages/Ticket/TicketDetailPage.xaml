<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.TicketDetailPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_TicketDetail_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_TicketDetail_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Ticket Entry Card -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label x:Name="TypeHeaderLabel"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="15">
                            <!-- Title -->
                            <Label Text="{x:Static resx:Resources.Ticket_Title}"
                                   Style="{StaticResource LabelInfoOnCard}"
                                   FontAttributes="Bold" />
                            <Label x:Name="TitleLabel"
                                   Style="{StaticResource LabelInfoOnCard}" />
                            <!-- Text -->
                            <Label Text="{x:Static resx:Resources.Ticket_Text}"
                                   Style="{StaticResource LabelInfoOnCard}"
                                   FontAttributes="Bold"
                                   Margin="0,10,0,0" />
                            <Label x:Name="TextLabel"
                                   Style="{StaticResource LabelInfoOnCard}" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Answer Button -->
                <Button x:Name="AnswerButton"
                        Text="{x:Static resx:Resources.Ticket_Answer}"
                        Style="{StaticResource ButtonGreen}"
                        Clicked="OnAnswerClicked" />

                <!-- Answer Input Area (hidden initially) -->
                <Border x:Name="AnswerInputBorder"
                        Style="{StaticResource Card}"
                        IsVisible="False"
                        Opacity="0"
                        Scale="0.95">
                    <VerticalStackLayout Padding="15" Spacing="10">
                        <Label Text="{x:Static resx:Resources.Ticket_YourAnswer}"
                               Style="{StaticResource LabelInfoOnCard}"
                               FontAttributes="Bold" />
                        <Border Style="{StaticResource TileOuterForEntry}">
                            <Border Style="{StaticResource TileInnerForEntry}">
                                <Editor x:Name="AnswerEditor"
                                        HeightRequest="100"
                                        AutoSize="TextChanges" />
                            </Border>
                        </Border>
                        <Button Text="{x:Static resx:Resources.General_Button_Send}"
                                Style="{StaticResource ButtonPrimary}"
                                Clicked="OnSendAnswerClicked" />
                    </VerticalStackLayout>
                </Border>

                <!-- Ticket Entries (Answers) Section -->
                <VerticalStackLayout x:Name="EntriesContainer" Spacing="10">
                    <!-- Dynamically populated -->
                </VerticalStackLayout>


            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
