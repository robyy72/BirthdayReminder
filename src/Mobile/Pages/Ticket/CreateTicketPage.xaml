<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.CreateTicketPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_CreateTicket_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_CreateTicket_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <ScrollView Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BodyBackgroundLight}, Dark={StaticResource BodyBackgroundDark}}">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Ticket Type Display -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label x:Name="TypeHeaderLabel"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="15" Spacing="10">
                            <!-- Error Display -->
                            <Border x:Name="ErrorBorder" Style="{StaticResource BorderError}">
                                <Label x:Name="ErrorLabel" Style="{StaticResource LabelError}" />
                            </Border>
                            <!-- Title Entry -->
                            <Label Text="{x:Static resx:Resources.Ticket_Title}"
                                   Style="{StaticResource LabelInfoOnCard}"
                                   FontAttributes="Bold" />
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Entry x:Name="TitleEntry"
                                           Style="{StaticResource EntryStandard}"
                                           Focused="OnEntryFocused"
                                           Unfocused="OnEntryUnfocused" />
                                </Border>
                            </Border>
                            <!-- Text Editor -->
                            <Label Text="{x:Static resx:Resources.Ticket_Text}"
                                   Style="{StaticResource LabelInfoOnCard}"
                                   FontAttributes="Bold"
                                   Margin="0,10,0,0" />
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Editor x:Name="TextEditor"
                                            HeightRequest="150"
                                            AutoSize="TextChanges" />
                                </Border>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Button Text="{x:Static resx:Resources.General_Button_Send}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnSaveClicked"
                        Margin="0,20,0,0" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
