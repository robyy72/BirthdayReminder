@page "{id:int}"
@model WebsiteAdmin.Pages.SystemUsers.DetailModel
@{
    ViewData["Title"] = "User Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>User Details</h1>
    <a asp-page="/SystemUsers/Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@if (Model.SystemUser == null)
{
    <div class="alert alert-danger">User not found.</div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="SystemUser.Id" />
                        <div class="mb-3">
                            <label asp-for="SystemUser.Email" class="form-label">Email</label>
                            <input asp-for="SystemUser.Email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SystemUser.DisplayName" class="form-label">Display Name</label>
                            <input asp-for="SystemUser.DisplayName" class="form-control" />
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="SystemUser.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="SystemUser.IsActive" class="form-check-label">Active</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Created</label>
                            <input type="text" class="form-control" value="@Model.SystemUser.CreatedAt.ToString("dd.MM.yyyy HH:mm")" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Login</label>
                            <input type="text" class="form-control" value="@(Model.SystemUser.LastLoginAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")" disabled />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="/SystemUsers/Delete" asp-route-id="@Model.SystemUser.Id" class="btn btn-outline-danger">Delete</a>
                    </form>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">Change Password</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ChangePassword">
                        <input type="hidden" name="userId" value="@Model.SystemUser.Id" />
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" name="newPassword" class="form-control" required minlength="6" />
                        </div>
                        <button type="submit" class="btn btn-warning">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
