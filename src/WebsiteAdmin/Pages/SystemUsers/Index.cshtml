@page
@model WebsiteAdmin.Pages.SystemUsers.IndexModel
@{
    ViewData["Title"] = "System Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>System Users</h1>
    <a asp-page="/SystemUsers/Create" class="btn btn-primary">New User</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Display Name</th>
                    <th>Active</th>
                    <th>Last Login</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@(user.DisplayName ?? "-")</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@(user.LastLoginAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                        <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-end">
                            <a asp-page="/SystemUsers/Detail" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Detail</a>
                            <a asp-page="/SystemUsers/Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Users.Any())
        {
            <div class="text-center text-muted py-3">No system users found.</div>
        }
    </div>
</div>
