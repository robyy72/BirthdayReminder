<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Birthday Reminder Admin</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteAdmin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm mb-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand fs-4 fw-bold text-dark" asp-area="" asp-page="/Index">Birthday Reminder <span class="navbar-brand-box">Admin</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link fs-5 px-3" asp-area="" asp-page="/Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5 px-3" asp-area="" asp-page="/Tickets/Index">Tickets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5 px-3" asp-area="" asp-page="/Customers/Index">Customers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5 px-3" asp-area="" asp-page="/ErrorLogs/Index">Error Logs</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <span class="nav-link text-muted">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid px-4">
            <a asp-page="/SystemUsers/Index" class="text-muted text-decoration-none">System Users</a>
            <span class="mx-2">&middot;</span>
            <a asp-page="/EmailTexts" class="text-muted text-decoration-none">Email Standard Text</a>
            <span class="mx-2">&middot;</span>
            <a asp-page="/MessengerTexts" class="text-muted text-decoration-none">Messenger Standard Text</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
