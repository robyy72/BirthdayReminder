@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <!-- Customers Card (50%) -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold">Customers</span>
                <a asp-page="/Customers/Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3">
                            <h2 class="mb-0 text-primary">@Model.UserStats.TotalUsers</h2>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3">
                            <h2 class="mb-0 text-success">@Model.UserStats.ActiveLast24h</h2>
                            <small class="text-muted">Active 24h</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3">
                            <h2 class="mb-0 text-info">@Model.UserStats.ActiveLast7d</h2>
                            <small class="text-muted">Active 7d</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3">
                            <h2 class="mb-0 text-secondary">@Model.UserStats.ActiveLast30d</h2>
                            <small class="text-muted">Active 30d</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-info bg-opacity-10">
                            <h2 class="mb-0">@Model.UserStats.PlusSubscribers</h2>
                            <small class="text-muted">Plus</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-warning bg-opacity-10">
                            <h2 class="mb-0">@Model.UserStats.ProSubscribers</h2>
                            <small class="text-muted">Pro</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tickets Card (50%) -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold">Tickets</span>
                <a asp-page="/Tickets/Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3">
                            <h2 class="mb-0 text-primary">@Model.TotalTickets</h2>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-warning bg-opacity-10">
                            <h2 class="mb-0 text-warning">@Model.CreatedTickets</h2>
                            <small class="text-muted">Created</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-info bg-opacity-10">
                            <h2 class="mb-0 text-info">@Model.AssignedTickets</h2>
                            <small class="text-muted">Assigned</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-primary bg-opacity-10">
                            <h2 class="mb-0 text-primary">@Model.WeAnsweredTickets</h2>
                            <small class="text-muted">We Answered</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-secondary bg-opacity-10">
                            <h2 class="mb-0 text-secondary">@Model.WaitingTickets</h2>
                            <small class="text-muted">Waiting</small>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 mb-3">
                        <div class="border rounded p-3 bg-success bg-opacity-10">
                            <h2 class="mb-0 text-success">@Model.SuccessfulTickets</h2>
                            <small class="text-muted">Successful</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
