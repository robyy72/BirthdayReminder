@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebsiteCustomer.SharedResource> Lang
@model IndexModel
@{
    ViewData["Title"] = Lang["AppTitle"].Value;
}

<div class="landing-container">
    <h1 class="app-title">@Lang["AppTitle"]</h1>
    <p class="app-tagline">@Lang["AppTagline"]</p>

    <div class="main-content">

        <!-- Area Screenshots -->
        <div class="screenshots-section">
            <div class="screenshots-wrapper">
                <div class="features-list">
                    &middot;&nbsp;@Lang["Feature1"]<br />
                    &middot;&nbsp;@Lang["Feature2"]<br />
                    &middot;&nbsp;@Lang["Feature3"]
                </div>
                <div class="screenshots-row">
                    <div class="screenshot-placeholder">
                        <span>Screenshot 1</span>
                    </div>
                    <div class="screenshot-placeholder">
                        <span>Screenshot 2</span>
                    </div>
                    <div class="screenshot-placeholder">
                        <span>Screenshot 3</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Area QR Codes -->
        <div class="download-section">
            <h2>@Lang["DownloadTheApp"]</h2>
            <div class="qr-codes">
                <div class="qr-code-item">
                    <div class="qr-placeholder">
                        <span>App Store QR</span>
                    </div>
                    <p>@Lang["iOSLine1"]<br />@Lang["iOSLine2"]</p>
                </div>
                <div class="qr-code-item">
                    <div class="qr-placeholder">
                        <span>Play Store QR</span>
                    </div>
                    <p>@Lang["AndroidLine1"]<br />@Lang["AndroidLine2"]</p>
                </div>
            </div>
        </div>
    </div>

    <footer class="landing-footer">
        <a href="/Contact">@Lang["Contact"]</a>
        <a href="/Privacy">@Lang["Privacy"]</a>
        <a href="/Terms">@Lang["Terms"]</a>
        <a href="/Cancellation">@Lang["Cancellation"]</a>
        <a href="/Imprint">@Lang["Imprint"]</a>
    </footer>
</div>
