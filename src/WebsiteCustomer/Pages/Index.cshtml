@page
@model IndexModel
@{
    ViewData["Title"] = "Birthday Reminder";
}

<div class="landing-container">
    <h1 class="app-title">Birthday Reminder</h1>
    <p class="app-tagline">Never forget a birthday again</p>

    <div class="screenshots-section">
        <div class="screenshot-placeholder">
            <span>Screenshot 1</span>
        </div>
        <div class="screenshot-placeholder">
            <span>Screenshot 2</span>
        </div>
        <div class="screenshot-placeholder">
            <span>Screenshot 3</span>
        </div>
    </div>

    <div class="download-section">
        <h2>Download the App</h2>
        <div class="qr-codes">
            <div class="qr-code-item">
                <div class="qr-placeholder">
                    <span>App Store QR</span>
                </div>
                <p>iOS</p>
            </div>
            <div class="qr-code-item">
                <div class="qr-placeholder">
                    <span>Play Store QR</span>
                </div>
                <p>Android</p>
            </div>
        </div>
    </div>

    <footer class="landing-footer">
        <a href="/Contact">Contact</a>
        <a href="/Privacy">Privacy</a>
        <a href="/Imprint">Imprint</a>
    </footer>
</div>
