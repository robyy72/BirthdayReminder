<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.AccountPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_Account_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Account_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Email -->
                <Label Text="{x:Static resx:Resources.Account_Email}"
                       Style="{StaticResource LabelHeader}" />

                <Border Style="{StaticResource Tile}">
                    <Label x:Name="EmailLabel"
                           Style="{StaticResource LabelInfo}" />
                </Border>

                <!-- Subscription -->
                <Label Text="{x:Static resx:Resources.Account_Subscription}"
                       Style="{StaticResource LabelHeader}" />

                <Border Style="{StaticResource Tile}">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="{x:Static resx:Resources.Account_SubscriptionTier}"
                                   Style="{StaticResource LabelInfo}"
                                   VerticalOptions="Center" />
                            <Label x:Name="SubscriptionLabel"
                                   Grid.Column="1"
                                   Style="{StaticResource LabelInfo}"
                                   FontAttributes="Bold" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="{x:Static resx:Resources.Account_ValidUntil}"
                                   Style="{StaticResource LabelInfo}"
                                   VerticalOptions="Center" />
                            <Label x:Name="ValidUntilLabel"
                                   Grid.Column="1"
                                   Style="{StaticResource LabelInfo}"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
