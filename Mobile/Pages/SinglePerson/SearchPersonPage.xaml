<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.SearchPersonPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_NewBirthday_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_NewBirthday_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Name Input Card -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.CardHeader_Name}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="15" Spacing="10">
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Entry x:Name="FirstNameEntry"
                                           Placeholder="{x:Static resx:Resources.Placeholder_FirstName}"
                                           Style="{StaticResource EntryStandard}"
                                           TextChanged="OnSearchTextChanged"
                                           Focused="OnEntryFocused"
                                           Unfocused="OnEntryUnfocused" />
                                </Border>
                            </Border>
                            <Border Style="{StaticResource TileOuterForEntry}">
                                <Border Style="{StaticResource TileInnerForEntry}">
                                    <Entry x:Name="LastNameEntry"
                                           Placeholder="{x:Static resx:Resources.Placeholder_LastName}"
                                           Style="{StaticResource EntryStandard}"
                                           TextChanged="OnSearchTextChanged"
                                           Focused="OnEntryFocused"
                                           Unfocused="OnEntryUnfocused" />
                                </Border>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Search Results Card -->
                <Border x:Name="ResultsCard" Style="{StaticResource Card}" IsVisible="False">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.SearchPerson_SearchHeader}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout x:Name="ResultsList" Padding="10" Spacing="5">
                            <!-- Dynamically populated with Tiles -->
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Create New Button -->
                <Button Text="{x:Static resx:Resources.SearchPerson_CreateNew}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnCreateNewClicked"
                        Margin="0,10,0,0" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
