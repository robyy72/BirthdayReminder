<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.SupportOverviewPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_SupportOverview_Title}">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_SupportOverview_Title}"
                               ShowMenuButton="False"
                               ShowBackButton="True" />

        <!-- Filter Picker -->
        <Border Grid.Row="1" Padding="20,10">
            <Picker x:Name="FilterPicker"
                    SelectedIndexChanged="OnFilterChanged"
                    HorizontalOptions="End" />
        </Border>

        <ScrollView Grid.Row="2">
            <VerticalStackLayout x:Name="EntriesContainer"
                                 Padding="30,10,30,30"
                                 Spacing="15">
                <!-- Dynamically populated -->
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
