<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.StartPage_3"
             x:DataType="local:StartPage_3"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Contacts Section -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Contacts}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="ContactsGroup">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsNone}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsNone"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             IsChecked="True"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsRead}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsRead"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsReadWrite}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsReadWrite"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_ContactsBirthdayCalendar}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioContactsBirthdayCalendar"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             CheckedChanged="OnContactsRadioChanged" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Calendar Section -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Calendars}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="15">
                            <!-- Write to calendars toggle -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_WriteCalendarsMultiple}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="WriteCalendarsSwitch"
                                        Grid.Column="1"
                                        Toggled="OnWriteCalendarsToggled"
                                        VerticalOptions="Center" />
                            </Grid>

                            <!-- Calendar List -->
                            <VerticalStackLayout x:Name="CalendarListContainer"
                                                 IsVisible="False"
                                                 Spacing="5">
                                <VerticalStackLayout x:Name="CalendarTogglesContainer"
                                                     Spacing="5" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Reminder Section -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Reminder_Label}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="15">
                            <!-- No Reminder -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_NoReminders}"
                                       Style="{StaticResource LabelBody}"
                                       VerticalOptions="Center" />
                                <Switch x:Name="NoReminderSwitch"
                                        Grid.Column="1"
                                        Toggled="OnNoReminderToggled"
                                        VerticalOptions="Center" />
                            </Grid>

                            <!-- Reminder Methods Container -->
                            <VerticalStackLayout x:Name="ReminderMethodsContainer" Spacing="15">
                                <!-- Email -->
                                <VerticalStackLayout Spacing="5">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{x:Static resx:Resources.ReminderMethod_Email}"
                                               Style="{StaticResource LabelBody}"
                                               VerticalOptions="Center" />
                                        <Switch x:Name="EmailSwitch"
                                                Grid.Column="1"
                                                Toggled="OnReminderToggled"
                                                VerticalOptions="Center" />
                                    </Grid>
                                    <HorizontalStackLayout x:Name="EmailTimeContainer" IsVisible="False" Spacing="5" HorizontalOptions="End">
                                        <Picker x:Name="EmailHoursPicker" Style="{StaticResource PickerTime}" />
                                        <Label Text=":" Style="{StaticResource LabelDateSeparator}" />
                                        <Picker x:Name="EmailMinutesPicker" Style="{StaticResource PickerTime}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- SMS -->
                                <VerticalStackLayout Spacing="5">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{x:Static resx:Resources.ReminderMethod_Sms}"
                                               Style="{StaticResource LabelBody}"
                                               VerticalOptions="Center" />
                                        <Switch x:Name="SmsSwitch"
                                                Grid.Column="1"
                                                Toggled="OnReminderToggled"
                                                VerticalOptions="Center" />
                                    </Grid>
                                    <HorizontalStackLayout x:Name="SmsTimeContainer" IsVisible="False" Spacing="5" HorizontalOptions="End">
                                        <Picker x:Name="SmsHoursPicker" Style="{StaticResource PickerTime}" />
                                        <Label Text=":" Style="{StaticResource LabelDateSeparator}" />
                                        <Picker x:Name="SmsMinutesPicker" Style="{StaticResource PickerTime}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Lock Screen -->
                                <VerticalStackLayout Spacing="5">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{x:Static resx:Resources.ReminderMethod_LockScreen}"
                                               Style="{StaticResource LabelBody}"
                                               VerticalOptions="Center" />
                                        <Switch x:Name="LockScreenSwitch"
                                                Grid.Column="1"
                                                Toggled="OnReminderToggled"
                                                VerticalOptions="Center" />
                                    </Grid>
                                    <HorizontalStackLayout x:Name="LockScreenTimeContainer" IsVisible="False" Spacing="5" HorizontalOptions="End">
                                        <Picker x:Name="LockScreenHoursPicker" Style="{StaticResource PickerTime}" />
                                        <Label Text=":" Style="{StaticResource LabelDateSeparator}" />
                                        <Picker x:Name="LockScreenMinutesPicker" Style="{StaticResource PickerTime}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- WhatsApp -->
                                <VerticalStackLayout Spacing="5">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{x:Static resx:Resources.ReminderMethod_WhatsApp}"
                                               Style="{StaticResource LabelBody}"
                                               VerticalOptions="Center" />
                                        <Switch x:Name="WhatsAppSwitch"
                                                Grid.Column="1"
                                                Toggled="OnReminderToggled"
                                                VerticalOptions="Center" />
                                    </Grid>
                                    <HorizontalStackLayout x:Name="WhatsAppTimeContainer" IsVisible="False" Spacing="5" HorizontalOptions="End">
                                        <Picker x:Name="WhatsAppHoursPicker" Style="{StaticResource PickerTime}" />
                                        <Label Text=":" Style="{StaticResource LabelDateSeparator}" />
                                        <Picker x:Name="WhatsAppMinutesPicker" Style="{StaticResource PickerTime}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Next Button -->
                <Button Text="{x:Static resx:Resources.General_Button_Next}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnNextClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
