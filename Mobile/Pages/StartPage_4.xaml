<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.StartPage_4"
             x:DataType="local:StartPage_4"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Initial State: Ask for Permission -->
                <VerticalStackLayout x:Name="PanelInitial" Spacing="20">
                    <Label Text="Um Deine Kontakte lesen zu können, brauchen wir Deine Erlaubnis."
                           Style="{StaticResource LabelInfo}" />

                    <Button Text="Berechtigung jetzt anfragen"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnRequestPermissionClicked" />
                </VerticalStackLayout>

                <!-- Permission Granted State -->
                <VerticalStackLayout x:Name="PanelGranted" IsVisible="False" Spacing="20">
                    <Label Text="Vielen Dank! Wir kümmern uns darum."
                           Style="{StaticResource LabelInfo}" />
                </VerticalStackLayout>

                <!-- Permission Denied State -->
                <VerticalStackLayout x:Name="PanelDenied" IsVisible="False" Spacing="20">
                    <Label Text="OK, Berechtigung abgelehnt, verstanden. Jederzeit änderbar in deinen Account-Einstellungen."
                           Style="{StaticResource LabelInfo}" />
                </VerticalStackLayout>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button x:Name="ButtonNext"
                            Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked"
                            IsEnabled="False" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
