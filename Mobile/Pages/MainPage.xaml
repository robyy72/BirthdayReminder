<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.MainPage"
             Title="{x:Static resx:Resources.Page_Main_Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header with Title and FAB -->
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="{x:Static resx:Resources.Page_Main_Title}"
                       FontSize="28"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="0" />

                <!-- Material Design FAB with + and New label -->
                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Button Text="+"
                            FontSize="28"
                            FontAttributes="Bold"
                            WidthRequest="56"
                            HeightRequest="56"
                            CornerRadius="28"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Shadow="{Shadow Brush=Black, Offset='2,4', Radius=6, Opacity=0.3}"
                            Clicked="OnNewBirthdayClicked" />
                    <Label Text="{x:Static resx:Resources.General_Button_New}"
                           FontSize="10"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Gray600}" />
                </VerticalStackLayout>
            </Grid>

            <!-- Upcoming Birthdays Section -->
            <Label Text="{x:Static resx:Resources.Page_Main_UpcomingTitle}"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <CollectionView x:Name="UpcomingList"
                            ItemsSource="{Binding UpcomingBirthdays}"
                            SelectionMode="Single"
                            SelectionChanged="OnBirthdaySelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" FontSize="18" VerticalOptions="Center" />
                                <Label Text="{Binding BirthdayDisplay}" FontSize="14" TextColor="Gray" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No upcoming birthdays" TextColor="Gray" />
                </CollectionView.EmptyView>
            </CollectionView>

            <Label Text="{x:Static resx:Resources.Page_Main_MissedTitle}"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,20,0,0" />

            <CollectionView x:Name="MissedList"
                            ItemsSource="{Binding MissedBirthdays}"
                            SelectionMode="Single"
                            SelectionChanged="OnBirthdaySelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5" BackgroundColor="#FFF0F0">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" FontSize="18" VerticalOptions="Center" />
                                <Label Text="{Binding BirthdayDisplay}" FontSize="14" TextColor="Gray" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No missed birthdays" TextColor="Gray" />
                </CollectionView.EmptyView>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
