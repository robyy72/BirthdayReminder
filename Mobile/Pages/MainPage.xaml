<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.MainPage"
             Shell.NavBarIsVisible="False"
             Title="{x:Static resx:Resources.Page_Main_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Menu Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*,Auto">
            <Button x:Name="MenuButton"
                    Grid.Column="0"
                    Text="â˜°"
                    Style="{StaticResource ButtonGlass}"
                    Clicked="OnMenuClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1" Padding="20">
        <VerticalStackLayout Spacing="15">
            <!-- Upcoming Birthdays Section -->
            <Label x:Name="UpcomingBirthdaysLabel"
                   Style="{StaticResource LabelSubHeader}" HorizontalOptions="Center"/>

            <CollectionView x:Name="UpcomingList"
                            ItemsSource="{Binding UpcomingBirthdays}"
                            SelectionMode="Single"
                            SelectionChanged="OnBirthdaySelected">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBirthday}">
                            <VerticalStackLayout Spacing="0">
                                <Border Style="{StaticResource CardHeader}">
                                    <Label Text="{Binding DisplayName}"
                                           Style="{StaticResource LabelCardHeader}" />
                                </Border>
                                <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                    <Label Grid.Column="0"
                                           Text="{Binding DateDisplay}"
                                           Style="{StaticResource LabelInfo}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding AgeDisplay}"
                                           Style="{StaticResource LabelInfo}"
                                           VerticalOptions="Center" />
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No upcoming birthdays"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           Padding="20" />
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Missed Birthdays Section -->
            <Label x:Name="MissedBirthdaysLabel"
                   Style="{StaticResource LabelSubHeader}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <CollectionView x:Name="MissedList"
                            ItemsSource="{Binding MissedBirthdays}"
                            SelectionMode="Single"
                            SelectionChanged="OnBirthdaySelected">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBirthday}">
                            <VerticalStackLayout Spacing="0">
                                <Border Style="{StaticResource CardHeader}">
                                    <Label Text="{Binding DisplayName}"
                                           Style="{StaticResource LabelCardHeader}" />
                                </Border>
                                <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                    <Label Grid.Column="0"
                                           Text="{Binding DateDisplay}"
                                           Style="{StaticResource LabelInfo}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding AgeDisplay}"
                                           Style="{StaticResource LabelInfo}"
                                           VerticalOptions="Center" />
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No missed birthdays"
                           Style="{StaticResource LabelInfo}"
                           HorizontalOptions="Center"
                           Padding="20" />
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Buttons -->
            <Button Text="{x:Static resx:Resources.Page_Main_NewBirthday}"
                    Style="{StaticResource ButtonPrimary}"
                    Clicked="OnNewBirthdayClicked"
                    Margin="0,10,0,40" />
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
