<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.AskForContactsPage"
             Title="{x:Static resx:Resources.Page_AskForContacts_Title}">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="{x:Static resx:Resources.Page_AskForContacts_Question}"
               FontSize="24"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <Button Text="{x:Static resx:Resources.Page_AskForContacts_ManualInput}"
                Clicked="OnManualInputClicked"
                HorizontalOptions="Fill" />

        <Button Text="{x:Static resx:Resources.Page_AskForContacts_FromContacts}"
                Clicked="OnFromContactsClicked"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>
