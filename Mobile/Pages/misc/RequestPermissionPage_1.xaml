<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.RequestPermissionPage_1"
             x:DataType="local:RequestPermissionPage_1"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Card 1: Permission Request -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Start4_PermissionNeeded}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="20">
                            <Label Text="{x:Static resx:Resources.Start4_GrantPermission}"
                                   Style="{StaticResource LabelInfo}" />

                            <Button x:Name="ButtonRequestPermission"
                                    Text="{x:Static resx:Resources.Start4_StartDialog}"
                                    Style="{StaticResource ButtonPrimary}"
                                    Clicked="OnRequestPermissionClicked" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Card 2: Result (always visible) -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Start4_Result}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="20">
                            <!-- Initial State -->
                            <VerticalStackLayout x:Name="PanelInitial">
                                <Label Text="{x:Static resx:Resources.Start4_WaitingForPermission}"
                                       Style="{StaticResource LabelInfo}" />
                            </VerticalStackLayout>

                            <!-- Success State -->
                            <VerticalStackLayout x:Name="PanelSuccess" IsVisible="False">
                                <Label x:Name="LabelSuccess"
                                       Style="{StaticResource LabelInfo}" />
                            </VerticalStackLayout>

                            <!-- Denied State -->
                            <VerticalStackLayout x:Name="PanelDenied" IsVisible="False">
                                <Label Text="{x:Static resx:Resources.Start4_PermissionDenied}"
                                       Style="{StaticResource LabelInfo}" />
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button x:Name="ButtonNext"
                            Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked"
                            IsEnabled="False" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
