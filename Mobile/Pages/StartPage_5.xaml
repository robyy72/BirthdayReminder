<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.StartPage_5"
             x:DataType="local:StartPage_5"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <Label Text="Willst du genau an dem Tag erinnert werden oder auch schon drei Tage vorher oder sogar 3x ?"
                       Style="{StaticResource LabelInfo}" />

                <!-- Reminder Count Section -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_ReminderCount}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="ReminderCountGroup">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.ReminderCount_None}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioNoReminder"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             IsChecked="True" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.ReminderCount_One}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioOneReminder"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.ReminderCount_Two}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioTwoReminders"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.ReminderCount_Three}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioThreeReminders"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
