<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.DeleteBirthdayPage"
             Title="{x:Static resx:Resources.Page_DeleteBirthday_Title}"
             Shell.FlyoutBehavior="Disabled">

    <Grid RowDefinitions="*">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30" Spacing="15">

                <!-- Name -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.CardHeader_Name}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="5">
                            <Label x:Name="NameDisplayLabel"
                                   Style="{StaticResource LabelInfo}"
                                   FontSize="20"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Birthday -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.CardHeader_Birthday}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="5">
                            <Label x:Name="BirthdayDisplayLabel"
                                   Style="{StaticResource LabelInfo}"
                                   FontSize="20"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Delete from Contact Toggle -->
                <Grid x:Name="DeleteFromContactRow" ColumnDefinitions="*,Auto" IsVisible="False" Margin="0,10,0,0">
                    <Label x:Name="DeleteFromContactLabel"
                           Style="{StaticResource LabelInfo}"
                           VerticalOptions="Center" />
                    <Switch x:Name="DeleteFromContactSwitch"
                            Grid.Column="1" />
                </Grid>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Cancel}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnCancelClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Delete}"
                            Style="{StaticResource ButtonPrimary}"
                            BackgroundColor="#D32F2F"
                            Clicked="OnDeleteClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
