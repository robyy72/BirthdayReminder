<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.StartPage_6"
             x:DataType="local:StartPage_6"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Reminder 1 Section -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Reminder_1}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="15">

                            <!-- Days before -->
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_DaysBefore}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <Entry x:Name="DaysEntry"
                                       Grid.Column="1"
                                       Keyboard="Numeric"
                                       WidthRequest="60"
                                       HorizontalTextAlignment="Center"
                                       Text="0" />
                            </Grid>

                            <!-- Methods -->
                            <Label Text="{x:Static resx:Resources.Settings_ReminderMethods}"
                                   Style="{StaticResource LabelInfo}"
                                   FontAttributes="Bold" />

                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="Email" Style="{StaticResource LabelInfo}" VerticalOptions="Center" />
                                <Switch x:Name="EmailSwitch" Grid.Column="1" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="SMS" Style="{StaticResource LabelInfo}" VerticalOptions="Center" />
                                <Switch x:Name="SmsSwitch" Grid.Column="1" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="Lock Screen" Style="{StaticResource LabelInfo}" VerticalOptions="Center" />
                                <Switch x:Name="LockScreenSwitch" Grid.Column="1" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="WhatsApp" Style="{StaticResource LabelInfo}" VerticalOptions="Center" />
                                <Switch x:Name="WhatsAppSwitch" Grid.Column="1" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="Signal" Style="{StaticResource LabelInfo}" VerticalOptions="Center" />
                                <Switch x:Name="SignalSwitch" Grid.Column="1" />
                            </Grid>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
