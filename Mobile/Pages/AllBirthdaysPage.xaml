<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.AllBirthdaysPage"
             Title="{x:Static resx:Resources.Page_AllBirthdays_Title}">

    <CollectionView x:Name="BirthdaysList"
                    ItemsSource="{Binding AllBirthdays}"
                    SelectionMode="Single"
                    SelectionChanged="OnBirthdaySelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10,5">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <Label Grid.Column="0"
                               Text="{Binding DisplayName}"
                               FontSize="18"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="{Binding DayDisplay}"
                               FontSize="18"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="End"
                               WidthRequest="30" />
                        <Label Grid.Column="2"
                               Text="{Binding MonthDisplay}"
                               FontSize="18"
                               VerticalOptions="Center"
                               Margin="5,0,0,0" />
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.EmptyView>
            <Label Text="No birthdays" TextColor="Gray" HorizontalOptions="Center" Margin="20" />
        </CollectionView.EmptyView>
    </CollectionView>

</ContentPage>
