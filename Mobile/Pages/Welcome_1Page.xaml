<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.Welcome_1Page"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Style="{StaticResource HeaderBar}">
            <Label Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="25">

                <Label Text="{x:Static resx:Resources.Welcome_Header_Title}"
                       Style="{StaticResource LabelHeader}" />

                <Label Text="{x:Static resx:Resources.Welcome_1_Text_1}"
                       Style="{StaticResource LabelInfo}" />

                <Label Text="{x:Static resx:Resources.Welcome_1_Text_2}"
                       Style="{StaticResource LabelInfo}" />

                <!-- Theme Selection -->
                <Border Style="{StaticResource Tile}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="{x:Static resx:Resources.Settings_Theme}"
                               Style="{StaticResource LabelSectionHeader}" />

                        <VerticalStackLayout RadioButtonGroup.GroupName="ThemeGroup"
                                             x:Name="ThemeRadioGroup"
                                             Spacing="10">
                            <RadioButton Content="{x:Static resx:Resources.Settings_Theme_Light}"
                                         Value="Light"
                                         Style="{StaticResource RadioStandard}"
                                         x:Name="RadioLight" />
                            <RadioButton Content="{x:Static resx:Resources.Settings_Theme_Dark}"
                                         Value="Dark"
                                         Style="{StaticResource RadioStandard}"
                                         x:Name="RadioDark" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Language Selection -->
                <Border Style="{StaticResource Tile}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="{x:Static resx:Resources.Settings_Language}"
                               Style="{StaticResource LabelSectionHeader}" />

                        <VerticalStackLayout RadioButtonGroup.GroupName="LocaleGroup"
                                             RadioButtonGroup.SelectedValue="{Binding SelectedLocale}"
                                             x:Name="LocaleRadioGroup"
                                             Spacing="10">
                            <RadioButton Content="Deutsch"
                                         Value="de"
                                         Style="{StaticResource RadioStandard}"
                                         x:Name="RadioDe" />
                            <RadioButton Content="English"
                                         Value="en"
                                         Style="{StaticResource RadioStandard}"
                                         x:Name="RadioEn" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Reminder Time -->
                <Border Style="{StaticResource Tile}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="{x:Static resx:Resources.Settings_ReminderTime}"
                               Style="{StaticResource LabelSectionHeader}" />

                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <!-- Hours -->
                            <VerticalStackLayout>
                                <Label Text="{x:Static resx:Resources.Time_Hours}"
                                       Style="{StaticResource LabelTimeCaption}" />
                                <Picker x:Name="HoursPicker"
                                        Style="{StaticResource PickerTime}" />
                            </VerticalStackLayout>

                            <Label Text=":"
                                   Style="{StaticResource LabelTimeSeparator}" />

                            <!-- Minutes -->
                            <VerticalStackLayout>
                                <Label Text="{x:Static resx:Resources.Time_Minutes}"
                                       Style="{StaticResource LabelTimeCaption}" />
                                <Picker x:Name="MinutesPicker"
                                        Style="{StaticResource PickerTime}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Next Button -->
                <Button Text="{x:Static resx:Resources.General_Button_Next}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnNextClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
