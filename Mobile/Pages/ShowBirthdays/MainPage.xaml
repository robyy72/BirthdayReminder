<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:controls="clr-namespace:Mobile"
             x:Class="Mobile.MainPage"
             x:DataType="controls:MainPage"
             NavigationPage.HasNavigationBar="False"
             Title="{x:Static resx:Resources.Page_Main_Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header -->
        <controls:CustomHeader Grid.Row="0"
                               Title="{x:Static resx:Resources.Page_Main_Title}"
                               ShowMenuButton="True"
                               ShowBackButton="False" />

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <FlyoutBase.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="{x:Static resx:Resources.Page_Main_NewBirthday}"
                                    Clicked="OnNewBirthdayClicked" />
                    <MenuFlyoutItem Text="{x:Static resx:Resources.Page_AllBirthdays_Title}"
                                    Clicked="OnAllBirthdaysClicked" />
                    <MenuFlyoutItem Text="{x:Static resx:Resources.Page_Settings_Title}"
                                    Clicked="OnSettingsClicked" />
                </MenuFlyout>
            </FlyoutBase.ContextFlyout>
            <VerticalStackLayout Spacing="15">
                <!-- Upcoming Birthdays Section -->
                <Label x:Name="UpcomingBirthdaysLabel"
                       Style="{StaticResource LabelSubHeader}" HorizontalOptions="Center"/>

                <CollectionView x:Name="UpcomingList"
                                ItemsSource="{Binding UpcomingBirthdays}"
                                SelectionMode="Single"
                                SelectionChanged="OnBirthdaySelected">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="controls:PersonViewModel">
                            <Border Style="{StaticResource CardBirthday}">
                                <VerticalStackLayout Spacing="0">
                                    <Border Style="{StaticResource CardHeader}">
                                        <Label Text="{Binding DisplayName}"
                                               Style="{StaticResource LabelCardHeader}" />
                                    </Border>
                                    <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDisplay}"
                                               Style="{StaticResource LabelInfo}"
                                               VerticalOptions="Center" />
                                        <Label Grid.Column="1"
                                               Text="{Binding AgeDisplay}"
                                               Style="{StaticResource LabelInfo}"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="{x:Static resx:Resources.EmptyView_NoUpcoming}"
                               Style="{StaticResource LabelInfo}"
                               HorizontalOptions="Center"
                               Padding="20" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Past Birthdays Section -->
                <Label x:Name="PastBirthdaysLabel"
                       Style="{StaticResource LabelSubHeader}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />

                <CollectionView x:Name="PastList"
                                ItemsSource="{Binding PastBirthdays}"
                                SelectionMode="Single"
                                SelectionChanged="OnBirthdaySelected">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="controls:PersonViewModel">
                            <Border Style="{StaticResource CardBirthday}">
                                <VerticalStackLayout Spacing="0">
                                    <Border Style="{StaticResource CardHeader}">
                                        <Label Text="{Binding DisplayName}"
                                               Style="{StaticResource LabelCardHeader}" />
                                    </Border>
                                    <Grid ColumnDefinitions="*,Auto" Padding="15,12">
                                        <Label Grid.Column="0"
                                               Text="{Binding DateDisplay}"
                                               Style="{StaticResource LabelInfo}"
                                               VerticalOptions="Center" />
                                        <Label Grid.Column="1"
                                               Text="{Binding AgeDisplay}"
                                               Style="{StaticResource LabelInfo}"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Text="{x:Static resx:Resources.EmptyView_NoMissed}"
                               Style="{StaticResource LabelInfo}"
                               HorizontalOptions="Center"
                               Padding="20" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Buttons -->
                <Button Text="{x:Static resx:Resources.Page_Main_NewBirthday}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnNewBirthdayClicked"
                        Margin="0,10,0,40" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Flyout Menu Overlay (spans all rows) -->
        <controls:FlyoutMenu Grid.Row="0"
                             Grid.RowSpan="2" />
    </Grid>
</ContentPage>
