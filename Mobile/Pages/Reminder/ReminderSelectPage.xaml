<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             xmlns:local="clr-namespace:Mobile"
             x:Class="Mobile.ReminderSelectPage"
             x:DataType="local:ReminderSelectPage"
             Title="{x:Static resx:Resources.Page_ReminderSettings_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_ReminderSettings_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <Label Text="{x:Static resx:Resources.ReminderSettings_Description}"
                       Style="{StaticResource LabelInfo}" />

                <!-- Reminder 1 Card -->
                <Border x:Name="Reminder1Card" Style="{StaticResource Card}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReminder1Tapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Reminder_1}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label Grid.Column="1"
                                       Text="›"
                                       Style="{StaticResource LabelCardHeader}"
                                       FontSize="24" />
                            </Grid>
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="5">
                            <Label x:Name="Reminder1DaysLabel"
                                   Style="{StaticResource LabelInfo}" />
                            <Label x:Name="Reminder1MethodsLabel"
                                   Style="{StaticResource LabelInfo}"
                                   TextColor="{StaticResource Gray500}" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Reminder 2 Card -->
                <Border x:Name="Reminder2Card" Style="{StaticResource Card}" IsVisible="False">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReminder2Tapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Reminder_2}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label Grid.Column="1"
                                       Text="›"
                                       Style="{StaticResource LabelCardHeader}"
                                       FontSize="24" />
                            </Grid>
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="5">
                            <Label x:Name="Reminder2DaysLabel"
                                   Style="{StaticResource LabelInfo}" />
                            <Label x:Name="Reminder2MethodsLabel"
                                   Style="{StaticResource LabelInfo}"
                                   TextColor="{StaticResource Gray500}" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Reminder 3 Card -->
                <Border x:Name="Reminder3Card" Style="{StaticResource Card}" IsVisible="False">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReminder3Tapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Reminder_3}"
                                       Style="{StaticResource LabelCardHeader}" />
                                <Label Grid.Column="1"
                                       Text="›"
                                       Style="{StaticResource LabelCardHeader}"
                                       FontSize="24" />
                            </Grid>
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="5">
                            <Label x:Name="Reminder3DaysLabel"
                                   Style="{StaticResource LabelInfo}" />
                            <Label x:Name="Reminder3MethodsLabel"
                                   Style="{StaticResource LabelInfo}"
                                   TextColor="{StaticResource Gray500}" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
