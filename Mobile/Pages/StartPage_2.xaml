<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.StartPage_2"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="25">

                <!-- Theme Selection -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Theme}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="ThemeGroup"
                                             x:Name="ThemeRadioGroup">
                            <RadioButton Value="Light"
                                         CheckedChanged="OnThemeChanged"
                                         x:Name="RadioLight">
                                <RadioButton.Content>
                                    <Label Text="{x:Static resx:Resources.Settings_Theme_Light}"
                                           Style="{StaticResource LabelInfo}" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Value="Dark"
                                         CheckedChanged="OnThemeChanged"
                                         x:Name="RadioDark">
                                <RadioButton.Content>
                                    <Label Text="{x:Static resx:Resources.Settings_Theme_Dark}"
                                           Style="{StaticResource LabelInfo}" />
                                </RadioButton.Content>
                            </RadioButton>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Language Selection -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Language}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="LocaleGroup"
                                             x:Name="LocaleRadioGroup">
                            <RadioButton Value="de"
                                         x:Name="RadioDe">
                                <RadioButton.Content>
                                    <Label Text="Deutsch"
                                           Style="{StaticResource LabelInfo}" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Value="en"
                                         x:Name="RadioEn">
                                <RadioButton.Content>
                                    <Label Text="English"
                                           Style="{StaticResource LabelInfo}" />
                                </RadioButton.Content>
                            </RadioButton>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Next Button -->
                <Button Text="{x:Static resx:Resources.General_Button_Next}"
                        Style="{StaticResource ButtonPrimary}"
                        Clicked="OnNextClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
