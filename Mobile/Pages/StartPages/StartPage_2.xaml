<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
             x:Class="Mobile.StartPage_2"
             Title="{x:Static resx:Resources.Page_Welcome_Title}"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0"
              Style="{StaticResource HeaderBarWithBack}"
              ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonBack}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static resx:Resources.Page_Main_Title}"
                   Style="{StaticResource LabelHeaderBar}" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Card: Theme -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Theme}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="10"
                                             RadioButtonGroup.GroupName="ThemeGroup">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Theme_System}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioThemeSystem"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}"
                                             IsChecked="True" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Theme_Light}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioThemeLight"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{x:Static resx:Resources.Settings_Theme_Dark}"
                                       Style="{StaticResource LabelInfo}"
                                       VerticalOptions="Center" />
                                <RadioButton x:Name="RadioThemeDark"
                                             Grid.Column="1"
                                             Style="{StaticResource RadioStandard}" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Card: Timezone -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="0">
                        <Border Style="{StaticResource CardHeader}">
                            <Label Text="{x:Static resx:Resources.Settings_Timezone}"
                                   Style="{StaticResource LabelCardHeader}" />
                        </Border>
                        <VerticalStackLayout Padding="20" Spacing="15">
                            <Picker x:Name="TimezonePicker"
                                    Title="{x:Static resx:Resources.Settings_Timezone_Select}" />
                            <Label Text="{x:Static resx:Resources.Settings_Timezone_Hint}"
                                   Style="{StaticResource LabelSmall}"
                                   TextColor="{StaticResource Gray500}" />
                            <Label Text="{x:Static resx:Resources.More_Informations}"
                                   Style="{StaticResource LabelHelpLink}"
                                   HorizontalOptions="End">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTimezoneInfoTapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{x:Static resx:Resources.General_Button_Back}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnBackClicked" />
                    <Button Grid.Column="1"
                            Text="{x:Static resx:Resources.General_Button_Next}"
                            Style="{StaticResource ButtonPrimary}"
                            Clicked="OnNextClicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
