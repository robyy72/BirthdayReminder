<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile"
    xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
    Title="{x:Static resx:Resources.Page_Main_Title}"
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    FlyoutBackgroundColor="{StaticResource Gray100}"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}" HeightRequest="120" Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="{x:Static resx:Resources.Page_Main_Title}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- MainPage - not shown in flyout menu (we're already home) -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        FlyoutItemIsVisible="False" />

    <FlyoutItem Title="{x:Static resx:Resources.Tab_ShowAll}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:AllBirthdaysPage}"
            Route="AllBirthdaysPage" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static resx:Resources.Tab_Settings}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static resx:Resources.Tab_Privacy}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:PrivacyPage}"
            Route="PrivacyPage" />
    </FlyoutItem>

</Shell>
