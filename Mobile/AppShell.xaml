<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile"
    xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
    Title="{x:Static resx:Resources.Page_Main_Title}"
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
    Shell.TitleColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
    FlyoutBehavior="Flyout">

    <!-- Flyout Item Template -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Border Style="{StaticResource TileFlyout}">
                <Label Text="{Binding Title}"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       FontSize="16"
                       FontAttributes="Bold"
                       VerticalTextAlignment="Center" />
            </Border>
        </DataTemplate>
    </Shell.ItemTemplate>

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
              HeightRequest="60"
              Padding="15,10">
            <Label Text="Wunschseite wÃ¤hlen"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Main Page -->
    <FlyoutItem Title="{x:Static resx:Resources.Tab_Overview}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <!-- Account/Settings -->
    <FlyoutItem Title="{x:Static resx:Resources.Tab_Settings}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:AccountPage}"
            Route="AccountPage" />
    </FlyoutItem>

    <!-- Privacy -->
    <FlyoutItem Title="{x:Static resx:Resources.Tab_Privacy}"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            ContentTemplate="{DataTemplate local:PrivacyPage}"
            Route="PrivacyPage" />
    </FlyoutItem>

    <!-- AllBirthdaysPage als Route registrieren, aber nicht im Flyout -->
    <ShellContent
        ContentTemplate="{DataTemplate local:AllBirthdaysPage}"
        Route="AllBirthdaysPage"
        FlyoutItemIsVisible="False" />

    <!-- Flyout Footer with Version -->
    <Shell.FlyoutFooter>
        <Grid Padding="15,10" HeightRequest="50">
            <Label x:Name="VersionLabel"
                   Style="{StaticResource LabelDescription}"
                   VerticalOptions="End"
                   HorizontalOptions="Start" />
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
