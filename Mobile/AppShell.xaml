<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile"
    xmlns:resx="clr-namespace:MobileLanguages;assembly=MobileLanguages"
    Title="BirthdayReminder">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="{x:Static resx:Resources.Tab_ShowAll}"
            ContentTemplate="{DataTemplate local:AllBirthdaysPage}"
            Route="AllBirthdaysPage" />

        <ShellContent
            Title="{x:Static resx:Resources.Tab_Settings}"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />

        <ShellContent
            Title="{x:Static resx:Resources.Tab_Privacy}"
            ContentTemplate="{DataTemplate local:PrivacyPage}"
            Route="PrivacyPage" />
    </TabBar>

</Shell>
