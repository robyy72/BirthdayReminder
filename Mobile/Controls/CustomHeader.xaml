<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.CustomHeader">

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
          MinimumHeightRequest="50"
          Padding="15,12"
          ColumnDefinitions="50,*,50">

        <!-- Menu Button (Hamburger) -->
        <Button x:Name="MenuButton"
                Grid.Column="0"
                Text="☰"
                FontSize="24"
                TextColor="{StaticResource White}"
                BackgroundColor="Transparent"
                BorderWidth="0"
                WidthRequest="50"
                HeightRequest="50"
                Clicked="OnMenuClicked" />

        <!-- Back Button -->
        <Button x:Name="BackButton"
                Grid.Column="0"
                Text="◀"
                FontSize="20"
                TextColor="{StaticResource White}"
                BackgroundColor="Transparent"
                BorderWidth="0"
                WidthRequest="50"
                HeightRequest="50"
                IsVisible="False"
                Clicked="OnBackClicked" />

        <!-- Title -->
        <Label x:Name="TitleLabel"
               Grid.Column="1"
               Text=""
               Style="{StaticResource LabelHeaderBar}"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- Placeholder for right side (future use) -->
        <ContentView Grid.Column="2" />

    </Grid>

</ContentView>
